                                    class="form-control w-300 collapse" 
                                    id="labBactereologiaControlTratamientoTexto" 
                                    type="text" 
                                    onchange="$('#labBactereologiaControlTratamiento').val('Control Tratamiento - ' + this.value)" 
                                )              
