div(class="card")
    div(class="card-header bg-secondary" id="imagenDensitometriaPediatricaTitulo")
        h2(class="mb-0")
            button(
                class="btn btn-link text-white",
                type="button",
                data-toggle="collapse" 
                data-target="#imagenDensitometriaPediatrica",
                aria-expanded="true",
                aria-controls="imagenDensitometriaPediatrica"
            ) 
                span(data-toggle="collapse" data-target="#imagenDensitometriaPediatrica").arrow-toggle.collapsed
                    i.material-icons.icon-arrow-up expand_more
                    i.material-icons.icon-arrow-down expand_less
                | Densitometria Pediátrica
    div(id="imagenDensitometriaPediatrica" class="collapse hide" aria-labelledby="imagenDensitometriaPediatricaTitulo" data-parent="#imagen")
        div(class="card-body")
            .row
                .col-sm
                    .checkbox
                        label
                            input(
                                type="checkbox" 
                                checked=false 
                                id="imagenDensitometriaPediatricaColumnaAnteroposterior" 
                                name="imagen.densitometriaPediatrica" 
                                value="Columna anteroposterior"
                            ) 
                            label(
                                class="text-dark" 
                                for="imagenDensitometriaPediatricaColumnaAnteroposterior"
                            ) Columna anteroposterior
                .col-sm
                    .checkbox
                        label
                            input(
                                type="checkbox" 
                                checked=false 
                                id="imagenDensitometriaPediatricaCuerpoTotal" 
                                name="imagen.densitometriaPediatrica" 
                                value="Cuerpo total"
                            ) 
                            label(
                                class="text-dark" 
                                for="imagenDensitometriaPediatricaCuerpoTotal"
                            ) Cuerpo total
            .row
                .col-sm
                    .checkbox
                        label
                            input(
                                type="checkbox" 
                                checked=false 
                                id="imagenDensitometriaPediatricaComposicionCorporal" 
                                name="imagen.densitometriaPediatrica" 
                                value="Composición corporal"
                            ) 
                            label(
                                class="text-dark" 
                                for="imagenDensitometriaPediatricaComposicionCorporal"
                            ) Composición corporal
                .col-sm
            .row
                .col-md
                    .form-group
                        input(type="hidden" name="imagen.densitometriaPediatrica" id="imagenDensitometriaPediatricaOtros")
                        label(for="imagenDensitometriaPediatricaOtrosi") Otros:
                        input(
                            type="text" 
                            id="imagenDensitometriaPediatricaOtrosi"
                            onchange="$('#imagenDensitometriaPediatricaOtros').val('Otros: '+this.value)"
                        ).form-control